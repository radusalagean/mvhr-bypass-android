<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="table_cell_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
        <item name="layout_gravity">fill</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="table_cell_text_view.temperature">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="temp_bar_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/temp_bar_view_height</item>
        <item name="rangeLow">@integer/range_low</item>
        <item name="rangeHigh">@integer/range_high</item>
        <item name="currentTempColor">@color/color_temp_bar_current_temp_color</item>
        <item name="hysteresisColor">@color/color_hysteresis_24</item>
        <item name="currentTempWidth">@dimen/temp_bar_view_current_temp_width</item>
        <item name="android:paddingStart">@dimen/temp_bar_view_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/temp_bar_view_horizontal_padding</item>
    </style>
    
    <style name="temp_bar_label">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="temp_bar_slider">
        <item name="labelBehavior">gone</item>
    </style>
</resources>