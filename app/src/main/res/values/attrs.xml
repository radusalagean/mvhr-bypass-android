<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TempBarView">
        <!-- Static values -->
        <attr name="tempBarHeight" format="dimension" />
        <attr name="rangeLow" format="integer" />
        <attr name="rangeHigh" format="integer" />
        <attr name="plusInfiniteValue" format="boolean"/>
        <attr name="barColor" format="color" />
        <attr name="currentTempColor" format="color" />
        <attr name="hysteresisColor" format="color" />
        <attr name="currentTempWidth" format="dimension" />
        <attr name="barLabelSpacing" format="dimension" />
        <attr name="labelTextSize" format="dimension" />
        <!-- Dynamic values -->
        <attr name="valueLow" format="integer" />
        <attr name="valueHigh" format="integer" />
        <attr name="hysteresis" format="float" />
        <attr name="currentTemp" format="float" />
    </declare-styleable>

    <style name="TempBarViewDefStyle">
        <item name="tempBarHeight">8dp</item>
        <item name="rangeLow">0</item>
        <item name="rangeHigh">20</item>
        <item name="plusInfiniteValue">false</item>
        <item name="barColor">@android:color/black</item>
        <item name="currentTempColor">@android:color/holo_blue_bright</item>
        <item name="hysteresisColor">@android:color/holo_red_light</item>
        <item name="currentTempWidth">1dp</item>
        <item name="barLabelSpacing">2dp</item>
        <item name="labelTextSize">12sp</item>
        <item name="valueLow">10</item>
        <item name="valueHigh">15</item>
        <item name="hysteresis">1.0</item>
        <item name="currentTemp">18.5</item>
    </style>
</resources>